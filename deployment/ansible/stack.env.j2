MINECRAFT_JAVA_PORT={{ minecraft_java_port | default('25565') }}
MINECRAFT_JAVA_DIFFICULTY={{ minecraft_java_difficulty | default('normal') }}
MINECRAFT_JAVA_GAMEMODE={{ minecraft_java_gamemode | default('survival') }}
MINECRAFT_JAVA_MOTD={{ minecraft_java_motd | default('Mineclifford Java Server') }}
MINECRAFT_JAVA_LEVEL_NAME={{ minecraft_java_level_name | default('world') }}
