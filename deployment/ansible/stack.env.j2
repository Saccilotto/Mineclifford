MINECRAFT_BEDROCK_SERVER_NAME={{ minecraft_bedrock_server_name | default('Mineclifford Bedrock Server') }}
MINECRAFT_BEDROCK_LEVEL_NAME={{ minecraft_bedrock_level_name | default('Mineclifford') }}
MINECRAFT_BEDROCK_ALLOW_CHEATS={{ minecraft_bedrock_allow_cheats | default('false') }}

# RCON Configuration
RCON_PASSWORD={{ rcon_password | default('minecraft') }}
