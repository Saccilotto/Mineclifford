# Node Information
MANAGER_IP={{ manager_ip }}
NODE_HOSTNAME={{ ansible_hostname }}
TZ={{ timezone | default('America/Sao_Paulo') }}
SINGLE_NODE_SWARM={{ (groups['all'] | length == 1) | string | lower }}

# Minecraft Java Edition Configuration
MINECRAFT_JAVA_VERSION={{ minecraft_java_version | default('latest') }}
