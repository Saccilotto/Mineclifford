MINECRAFT_JAVA_WHITELIST={{ minecraft_java_whitelist | default('false') }}
MINECRAFT_JAVA_ALLOW_NETHER={{ minecraft_java_allow_nether | default('true') }}
MINECRAFT_JAVA_ENABLE_COMMAND_BLOCK={{ minecraft_java_enable_command_block | default('true') }}
MINECRAFT_JAVA_SPAWN_PROTECTION={{ minecraft_java_spawn_protection | default('0') }}
MINECRAFT_JAVA_VIEW_DISTANCE={{ minecraft_java_view_distance | default('10') }}

# Bedrock Edition Configuration
MINECRAFT_BEDROCK_ENABLED={{ "true" if minecraft_bedrock_enabled|default(true) else "false" }}
